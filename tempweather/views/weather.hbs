<!doctype html>
<html lang="en">
  <head>
  {{>head}}
    <title>WeatherWeb</title>
  </head>
  
  <body>
    
  <!-- Navbar section -->
 {{>navbar}}

  <!-- Main header section -->
    <div class="container">
        <div class="main-content">
                <form>
                    <input type="text" id="cityName" placeholder="Enter Your City" autocomplete="off" class="input">
                    <input type="submit" value="Search" id="submitBtn" class="submit">
                </form>
        </div>
        <div class="tempInfo">
            <div class="top_layer">
                <p id="day">Sat</p>
                <p id="date">23 OCT</p>
            </div>

            <div class="main_layer">
                <p id="city_name">Get output here</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_val">0</span><sup>o</sup>Cel</p>
                    <p id="temp_status"><i class="fa fa-cloud"></i></p>
                </div>
            </div>
        </div>
    </div>

  <!-- Footer section -->
  {{>footer}}

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    {{!-- main javascript link --}}
    <script src="js/main.js"></script>
  </body>
</html>